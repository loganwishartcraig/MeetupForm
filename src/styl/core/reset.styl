html, body {
  margin: 0;
  padding: 0;
  height: 100%;
}

h1, h2 {
  margin: 0;
  padding: 0;
  font-weight: normal;
}

hr {
  margin: 0;
  padding: 0;
  border: 0;
}

ul {
  margin: 0;
  padding: 0;
  width: auto;
  list-style: none;
}

input {
  padding: 0;
  margin: 0;
  outline: none;
  border: none;
  background: 0;
} 

select, button, textarea {
  outline: none;
  box-shadow: none;
}

button {
      background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
}

input:-webkit-autofill, textarea:-webkit-autofill, select:-webkit-autofill {
    -webkit-box-shadow: 0 0 0px 1000px white inset;
}

input[type=date]:invalid::-webkit-datetime-edit,
input[type=datetime-local]:invalid::-webkit-datetime-edit {
    color: #999;
}